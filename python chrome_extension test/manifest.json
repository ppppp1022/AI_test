{
  "manifest_version": 3,
  "name": "YouTube Alert Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
